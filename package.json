{
	"name": "template-ts",
	"version": "4.0.0",
	"description": "TypeScript version of our Node.js template",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"test": "NODE_OPTIONS=--enable-source-maps mocha --exit --file dist/tests/index.test.js",
		"test-w": "set NODE_OPTIONS=--enable-source-maps && set CI=true && mocha --exit dist/tests/index.test.js",
		"lint": "eslint src/**/*.ts",
		"watch": "tsc -w",
		"dev": "NODE_OPTIONS=--enable-source-maps nodemon -L -w ./dist -w ./src -w docs/build/docs.yaml dist/index.js",
		"dev-w": "set NODE_OPTIONS=--enable-source-maps && nodemon -L -w dist -w src dist/index.js",
		"start": "node dist/index.js",
		"coverage": "c8 --all --reporter=lcov npm run test",
		"coverage-w": "tsc && nyc --reporter=lcov npm run test-w && codecov",
		"migration-generate": "typeorm migration:generate -d './dist/datasource.js'",
		"migration-create": "typeorm migration:create"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/smoke-trees/node-template-ts.git"
	},
	"keywords": [
		"nodejs",
		"template",
		"typescript"
	],
	"author": "SmokeTrees",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/smoke-trees/node-template-ts/issues"
	},
	"homepage": "https://github.com/smoke-trees/node-template-ts#readme",
	"eslintConfig": {
		"rules": {
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": "error"
		}
	},
	"dependencies": {
		"@smoke-trees/postgres-backend": "~4.0.0",
		"@smoke-trees/smoke-context": "^1.6.0",
		"@types/express": "^5.0.3",
		"@types/express-serve-static-core": "^5.0.7",
		"chai-http": "^5.1.2",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^5.1.0",
		"inversify": "^7.7.0",
		"morgan": "^1.10.1",
		"pg": "^8.16.3",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "0.3.25",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/chai": "^5.2.2",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/mocha": "^10.0.10",
		"@types/morgan": "^1.9.10",
		"@types/node": "^22.17.0",
		"@types/pg": "^8.15.5",
		"@types/qs": "^6.14.0",
		"@types/superagent": "^8.1.9",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"c8": "^10.1.3",
		"chai": "^5.2.1",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^9.1.2",
		"mocha": "^11.7.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"typescript": "^5.9.0"
	},
	"pnpm": {
		"overrides": {
			"braces@<2.3.1": ">=2.3.1",
			"yargs-parser@<=5.0.0": ">=5.0.1",
			"set-value@<2.0.1": ">=2.0.1",
			"braces@<3.0.3": ">=3.0.3",
			"micromatch@<4.0.8": ">=4.0.8"
		}
	}
}
